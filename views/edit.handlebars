<h2 class="text-center mb-3">{{title}}</h2>
<form action="/links" method="POST" id="thisform" name="thisform">
<input type="hidden" name="_id" value="{{links._id}}">
    <div class="form-group">
        <label for="headLine">Headline</label>
        <input type="text" name="headLine" class="form-control">
    </div>
    <div class="form-group">
        <label for="descrip">Description</label>
        <input type="text" name="descrip" class="form-control">
    </div>
    <div class="form-group">
        <label for="urlLink">URL</label>
        <input type="url" name="urlLink" class="form-control">
    </div>
    <input type="submit" value="Add Link" class="btn">
</form>
<button id="update-button">Update last</button>
<button id='delete-button'>Delete</button>
<button id='delete-last'>Delete last entry</button>
<div id="message"></div>


<h4>Links</h4>
<table class="tableEdit" id="tableEdit">
    <tr>
        <th>Select</th>
        <th>Headline</th>
        <th>Description</th>
        <th>URL</th>
        
    
    </tr>

    {{#each links}}
    <tr>
    <td><input type="checkbox" name="checkbx"></td>
    <td id="idHidCol">{{this._id}}</td>
    <td>{{this.headLine}}</td>
    <td>{{this.descrip}}</td>
    <td>{{this.urlLink}}</td>
    <td><a href="/links/{{this._id}}/edit">Edit</a></td>
    <td><form method="POST" action="/links/{{this._id}}?_method=DELETE">
        <button type="submit">Delete</button>
    </form></td>
    
    </tr>
    
    
    {{/each}}

